{
  "name": "Basic Financial Analysis Scenario",
  "description": "Example scenarios for testing FinRobot-inspired Financial Analysis MCP Server",
  "scenarios": [
    {
      "id": "data_retrieval_test",
      "name": "Data Source Testing",
      "description": "Test basic data retrieval functions",
      "steps": [
        {
          "tool": "stock_data",
          "arguments": {
            "symbol": "AAPL",
            "start_date": "2024-01-01",
            "end_date": "2024-01-31"
          },
          "expected": "Historical price data with volume"
        },
        {
          "tool": "stock_info",
          "arguments": {
            "symbol": "AAPL"
          },
          "expected": "Company information and key metrics"
        },
        {
          "tool": "financial_statements",
          "arguments": {
            "symbol": "AAPL",
            "statement_type": "all"
          },
          "expected": "Income statement, balance sheet, cash flow"
        }
      ]
    },
    {
      "id": "financial_analysis_test",
      "name": "Statement Analysis",
      "description": "Test financial statement analysis tools",
      "steps": [
        {
          "tool": "analyze_income",
          "arguments": {
            "ticker": "MSFT",
            "period": "annual"
          },
          "expected": "Income statement analysis with trends"
        },
        {
          "tool": "analyze_balance",
          "arguments": {
            "ticker": "MSFT",
            "period": "annual"
          },
          "expected": "Balance sheet analysis with liquidity ratios"
        },
        {
          "tool": "analyze_cashflow",
          "arguments": {
            "ticker": "MSFT",
            "period": "annual"
          },
          "expected": "Cash flow analysis with free cash flow"
        }
      ]
    },
    {
      "id": "ratio_analysis_test",
      "name": "Financial Ratios",
      "description": "Test ratio calculation and interpretation",
      "steps": [
        {
          "tool": "calculate_ratios",
          "arguments": {
            "ticker": "GOOGL"
          },
          "expected": "Comprehensive financial ratios with interpretations"
        }
      ]
    },
    {
      "id": "comparative_analysis_test",
      "name": "Company Comparison",
      "description": "Test multi-company comparison tools",
      "steps": [
        {
          "tool": "compare_stocks",
          "arguments": {
            "tickers": ["AAPL", "MSFT", "GOOGL"],
            "metrics": ["marketCap", "trailingPE", "profitMargins", "returnOnEquity"]
          },
          "expected": "Comparative analysis with rankings"
        },
        {
          "tool": "sector_comparison",
          "arguments": {
            "ticker": "AAPL",
            "compare_to_sector": true
          },
          "expected": "Sector relative performance"
        }
      ]
    },
    {
      "id": "backtesting_test",
      "name": "Strategy Backtesting",
      "description": "Test quantitative backtesting tools",
      "steps": [
        {
          "tool": "backtest",
          "arguments": {
            "ticker": "SPY",
            "strategy": "sma_crossover",
            "start_date": "2023-01-01",
            "end_date": "2023-12-31",
            "initial_capital": 10000,
            "parameters": {
              "fast_period": 10,
              "slow_period": 30
            }
          },
          "expected": "Backtest results with trades and performance"
        },
        {
          "tool": "backtest",
          "arguments": {
            "ticker": "SPY",
            "strategy": "buy_and_hold",
            "start_date": "2023-01-01",
            "end_date": "2023-12-31",
            "initial_capital": 10000
          },
          "expected": "Buy and hold benchmark results"
        }
      ]
    },
    {
      "id": "portfolio_optimization_test",
      "name": "Portfolio Optimization",
      "description": "Test portfolio optimization methods",
      "steps": [
        {
          "tool": "portfolio_optimization",
          "arguments": {
            "tickers": ["AAPL", "MSFT", "GOOGL", "AMZN"],
            "start_date": "2023-01-01",
            "end_date": "2023-12-31",
            "optimization_method": "equal_weight"
          },
          "expected": "Equal weight portfolio allocation"
        },
        {
          "tool": "portfolio_optimization",
          "arguments": {
            "tickers": ["AAPL", "MSFT", "GOOGL", "AMZN"],
            "start_date": "2023-01-01",
            "end_date": "2023-12-31",
            "optimization_method": "max_sharpe"
          },
          "expected": "Maximum Sharpe ratio allocation"
        }
      ]
    },
    {
      "id": "risk_analysis_test",
      "name": "Risk Metrics",
      "description": "Test risk calculation tools",
      "steps": [
        {
          "tool": "value_at_risk",
          "arguments": {
            "ticker": "TSLA",
            "confidence_level": 0.95,
            "time_horizon": 1,
            "lookback_days": 252
          },
          "expected": "VaR calculations with interpretations"
        },
        {
          "tool": "beta_calculation",
          "arguments": {
            "ticker": "TSLA",
            "market_ticker": "SPY",
            "lookback_days": 252
          },
          "expected": "Beta and correlation with market"
        }
      ]
    },
    {
      "id": "technical_analysis_test",
      "name": "Chart Patterns",
      "description": "Test technical analysis tools",
      "steps": [
        {
          "tool": "chart_patterns",
          "arguments": {
            "ticker": "NVDA",
            "lookback_days": 90
          },
          "expected": "Identified patterns, support/resistance, trends"
        }
      ]
    },
    {
      "id": "investment_report_test",
      "name": "Report Generation",
      "description": "Test investment report generation",
      "steps": [
        {
          "tool": "investment_report",
          "arguments": {
            "ticker": "AAPL",
            "report_type": "comprehensive"
          },
          "expected": "Full investment report with recommendation"
        },
        {
          "tool": "investment_report",
          "arguments": {
            "ticker": "AAPL",
            "report_type": "summary"
          },
          "expected": "Summary investment report"
        }
      ]
    },
    {
      "id": "comprehensive_analysis_test",
      "name": "Complete Analysis",
      "description": "Test comprehensive analysis combining all tools",
      "steps": [
        {
          "tool": "comprehensive_analysis",
          "arguments": {
            "ticker": "META",
            "include_sections": ["fundamentals", "technicals", "news", "ratios", "risk"]
          },
          "expected": "Complete analysis with all sections and recommendation"
        }
      ]
    }
  ],
  "workflow_examples": [
    {
      "name": "Investment Decision Workflow",
      "description": "Complete workflow for investment decision",
      "steps": [
        "1. Get company overview with stock_info",
        "2. Analyze financials with analyze_income, analyze_balance, analyze_cashflow",
        "3. Calculate ratios with calculate_ratios",
        "4. Compare with peers using compare_stocks",
        "5. Check news sentiment with company_news",
        "6. Assess risk with value_at_risk and beta_calculation",
        "7. Generate report with investment_report"
      ]
    },
    {
      "name": "Portfolio Construction Workflow",
      "description": "Build and optimize a portfolio",
      "steps": [
        "1. Screen stocks with fundamental criteria",
        "2. Compare candidates with compare_stocks",
        "3. Analyze individual stocks with comprehensive_analysis",
        "4. Optimize allocation with portfolio_optimization",
        "5. Calculate portfolio risk metrics",
        "6. Backtest portfolio strategy"
      ]
    },
    {
      "name": "Trading Strategy Development",
      "description": "Develop and test trading strategies",
      "steps": [
        "1. Identify patterns with chart_patterns",
        "2. Backtest multiple strategies with backtest",
        "3. Compare strategy performance",
        "4. Calculate risk-adjusted returns",
        "5. Optimize strategy parameters"
      ]
    }
  ],
  "api_keys_required": [
    "SEC_API_KEY",
    "FINNHUB_API_KEY",
    "FMP_API_KEY"
  ],
  "optional_apis": [
    "REDDIT_CLIENT_ID",
    "ALPHA_VANTAGE_API_KEY",
    "NEWS_API_KEY"
  ],
  "notes": "Yahoo Finance is the primary data source and works without API key. Other APIs enhance functionality but are optional."
}
