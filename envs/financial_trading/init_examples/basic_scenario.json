{
  "name": "Basic Trading Scenario",
  "description": "Example scenarios for testing Financial Trading MCP Server",
  "scenarios": [
    {
      "id": "market_data_test",
      "name": "Market Data Retrieval",
      "description": "Test fetching historical stock data",
      "steps": [
        {
          "tool": "get_stock_data",
          "arguments": {
            "symbol": "AAPL",
            "period": "1mo",
            "interval": "1d",
            "vendor": "yfinance"
          },
          "expected": "Historical OHLCV data for AAPL"
        },
        {
          "tool": "get_realtime_quote",
          "arguments": {
            "symbol": "AAPL"
          },
          "expected": "Current price and quote data"
        }
      ]
    },
    {
      "id": "technical_analysis_test",
      "name": "Technical Indicators",
      "description": "Test technical indicator calculations",
      "steps": [
        {
          "tool": "get_technical_indicators",
          "arguments": {
            "symbol": "TSLA",
            "indicator": "RSI",
            "period": 14
          },
          "expected": "RSI values for TSLA"
        },
        {
          "tool": "get_multiple_indicators",
          "arguments": {
            "symbol": "TSLA",
            "indicators": ["SMA", "EMA", "MACD", "RSI"],
            "periods": {"SMA": 20, "EMA": 20, "RSI": 14}
          },
          "expected": "Multiple technical indicators"
        }
      ]
    },
    {
      "id": "fundamental_analysis_test",
      "name": "Fundamental Data",
      "description": "Test fundamental analysis tools",
      "steps": [
        {
          "tool": "get_fundamentals",
          "arguments": {
            "symbol": "MSFT",
            "vendor": "yfinance"
          },
          "expected": "Company fundamentals and overview"
        },
        {
          "tool": "get_balance_sheet",
          "arguments": {
            "symbol": "MSFT",
            "vendor": "yfinance"
          },
          "expected": "Balance sheet data"
        }
      ]
    },
    {
      "id": "social_sentiment_test",
      "name": "Social Media Sentiment",
      "description": "Test social media sentiment analysis",
      "steps": [
        {
          "tool": "get_reddit_sentiment",
          "arguments": {
            "ticker": "GME",
            "limit": 10,
            "time_filter": "week"
          },
          "expected": "Reddit sentiment for GME"
        },
        {
          "tool": "get_trending_tickers",
          "arguments": {
            "source": "reddit",
            "limit": 5
          },
          "expected": "Top trending tickers"
        }
      ]
    },
    {
      "id": "news_analysis_test",
      "name": "News and Events",
      "description": "Test news and calendar tools",
      "steps": [
        {
          "tool": "get_stock_news",
          "arguments": {
            "symbol": "NVDA",
            "vendor": "finnhub",
            "limit": 5
          },
          "expected": "Recent news for NVDA"
        },
        {
          "tool": "get_earnings_calendar",
          "arguments": {
            "days_ahead": 7
          },
          "expected": "Upcoming earnings announcements"
        }
      ]
    },
    {
      "id": "composite_analysis_test",
      "name": "Complete Stock Analysis",
      "description": "Test comprehensive analysis tool",
      "steps": [
        {
          "tool": "analyze_stock",
          "arguments": {
            "symbol": "AAPL",
            "include_sections": ["overview", "technicals", "fundamentals", "news", "sentiment"]
          },
          "expected": "Complete analysis report for AAPL"
        }
      ]
    }
  ],
  "test_portfolios": [
    {
      "name": "Tech Portfolio",
      "symbols": ["AAPL", "MSFT", "GOOGL", "NVDA", "META"],
      "weights": [0.25, 0.20, 0.20, 0.20, 0.15]
    },
    {
      "name": "Diversified Portfolio",
      "symbols": ["SPY", "BND", "GLD", "VNQ", "EFA"],
      "weights": [0.40, 0.30, 0.10, 0.10, 0.10]
    }
  ],
  "api_keys_required": [
    "FINNHUB_API_KEY",
    "REDDIT_CLIENT_ID",
    "ALPHA_VANTAGE_API_KEY"
  ],
  "notes": "Yahoo Finance works without API key and can be used for initial testing"
}
